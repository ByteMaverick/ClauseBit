{
  "manifest_version": 3,
  "name": "ClauseBit - Policy Summarizer",
  "version": "1.0",
  "description": "Summarize ToS and flag risky clauses with AI",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "cookies"
  ],
  "host_permissions": [
    "http://localhost:5173/*",
    "http://127.0.0.1:8080/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo-2.png"
    }
  },
  "icons": {
    "16": "icons/logo-2.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:5173/*"],
      "js": ["content.js"]
    }
  ]
}
